public class Main{
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        int n = scan.nextInt();
        for(int i = n ; i>=1;i--){
            for( int j =1; j<=n-i; j++){
                System.out.print("  ");//INVERSE TRIANGLE(TR)(SPACE=1 RIGHT TR ,SPACE=2 STRAIGHT TR,SPACE=3LEFT TR )
            } 
            for(int k=1;k<=i;k++){
                System.out.print("* ");
            }
             System.out.println("");  
        }
    } 
}
OUTPUT
5
